<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
                             http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <!-- ======== Servlet Declarations ======== -->
    <servlet>
        <servlet-name>RegisterServlet</servlet-name>
        <servlet-class>com.fitness.servlets.RegisterServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>com.fitness.servlets.LoginServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>LogoutServlet</servlet-name>
        <servlet-class>com.fitness.servlets.LogoutServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>ProfileServlet</servlet-name>
        <servlet-class>com.fitness.servlets.ProfileServlet</servlet-class>
    </servlet>





    <!-- Workout History Servlet -->
    <servlet>
        <servlet-name>WorkoutHistoryServlet</servlet-name>
        <servlet-class>com.fitness.servlets.WorkoutHistoryServlet</servlet-class>
    </servlet>

    <!-- Progress Dashboard Servlet -->
    <servlet>
        <servlet-name>ProgressDashboardServlet</servlet-name>
        <servlet-class>com.fitness.servlets.ProgressDashboardServlet</servlet-class>
    </servlet>

    <!-- Food Entry Servlet -->
    <servlet>
        <servlet-name>FoodEntryServlet</servlet-name>
        <servlet-class>com.fitness.servlets.FoodEntryServlet</servlet-class>
    </servlet>

    <!-- Food Entry History Servlet -->
    <servlet>
        <servlet-name>FoodEntryHistoryServlet</servlet-name>
        <servlet-class>com.fitness.servlets.FoodEntryHistoryServlet</servlet-class>
    </servlet>

   



    <!-- ======== URL Mappings ======== -->
    <servlet-mapping>
        <servlet-name>RegisterServlet</servlet-name>
        <url-pattern>/RegisterServlet</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/LoginServlet</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>LogoutServlet</servlet-name>
        <url-pattern>/LogoutServlet</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>ProfileServlet</servlet-name>
        <url-pattern>/ProfileServlet</url-pattern>
    </servlet-mapping>





    <!-- Map /workout-history to WorkoutHistoryServlet -->
    <servlet-mapping>
        <servlet-name>WorkoutHistoryServlet</servlet-name>
        <url-pattern>/workout-history</url-pattern>
    </servlet-mapping>

    <!-- Map /progress-dashboard to ProgressDashboardServlet -->
    <servlet-mapping>
        <servlet-name>ProgressDashboardServlet</servlet-name>
        <url-pattern>/progress-dashboard</url-pattern>
    </servlet-mapping>

    <!-- Map /FoodEntryServlet to FoodEntryServlet -->
    <servlet-mapping>
        <servlet-name>FoodEntryServlet</servlet-name>
        <url-pattern>/FoodEntryServlet</url-pattern>
    </servlet-mapping>

    <!-- Map /food-history to FoodEntryHistoryServlet -->
    <servlet-mapping>
        <servlet-name>FoodEntryHistoryServlet</servlet-name>
        <url-pattern>/food-history</url-pattern>
    </servlet-mapping>



    <!-- ======== Welcome Page ======== -->
    <welcome-file-list>
        <welcome-file>register.jsp</welcome-file>
    </welcome-file-list>

</web-app>