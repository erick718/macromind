<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="https://jakarta.ee/xml/ns/jakartaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="https://jakarta.ee/xml/ns/jakartaee
                             https://jakarta.ee/xml/ns/jakartaee/web-app_5_0.xsd"
         version="5.0">

    <!-- ======== Servlet Declarations ======== -->
    <servlet>
        <servlet-name>RegisterServlet</servlet-name>
        <servlet-class>com.fitness.servlets.RegisterServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>com.fitness.servlets.LoginServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>LogoutServlet</servlet-name>
        <servlet-class>com.fitness.servlets.LogoutServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>ProfileServlet</servlet-name>
        <servlet-class>com.fitness.servlets.ProfileServlet</servlet-class>
    </servlet>

    <!-- Workout Plan Servlet -->
    <servlet>
        <servlet-name>WorkoutPlanServlet</servlet-name>
        <servlet-class>com.fitness.servlets.WorkoutPlanServlet</servlet-class>
    </servlet>

    <!-- Workout History Servlet -->
    <servlet>
        <servlet-name>WorkoutHistoryServlet</servlet-name>
        <servlet-class>com.fitness.servlets.WorkoutHistoryServlet</servlet-class>
    </servlet>

    <!-- Progress Dashboard Servlet -->
    <servlet>
        <servlet-name>ProgressDashboardServlet</servlet-name>
        <servlet-class>com.fitness.servlets.ProgressDashboardServlet</servlet-class>
    </servlet>

    <!-- Food Entry History Servlet -->
    <servlet>
        <servlet-name>FoodEntryHistoryServlet</servlet-name>
        <servlet-class>com.fitness.servlets.FoodEntryHistoryServlet</servlet-class>
    </servlet>

    <!-- Password Reset Servlets -->
    <servlet>
        <servlet-name>ForgotPasswordServlet</servlet-name>
        <servlet-class>com.fitness.servlets.ForgotPasswordServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>VerifySecurityAnswerServlet</servlet-name>
        <servlet-class>com.fitness.servlets.VerifySecurityAnswerServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>ResetPasswordServlet</servlet-name>
        <servlet-class>com.fitness.servlets.ResetPasswordServlet</servlet-class>
    </servlet>

    <!-- Workout Logging Servlets are auto-configured via @WebServlet annotations -->koutEditServlet, LogExerciseServlet, CalorieBalanceServlet, 
         DeleteAccountServlet, and DatabaseTestServlet use @WebServlet annotations for auto-configuration -->



    <!-- ======== URL Mappings ======== -->
    <servlet-mapping>
        <servlet-name>RegisterServlet</servlet-name>
        <url-pattern>/RegisterServlet</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/LoginServlet</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>LogoutServlet</servlet-name>
        <url-pattern>/LogoutServlet</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>ProfileServlet</servlet-name>
        <url-pattern>/ProfileServlet</url-pattern>
    </servlet-mapping>

    <!-- Map /WorkoutPlanServlet to WorkoutPlanServlet -->
    <servlet-mapping>
        <servlet-name>WorkoutPlanServlet</servlet-name>
        <url-pattern>/WorkoutPlanServlet</url-pattern>
    </servlet-mapping>

    <!-- Map /workout-history to WorkoutHistoryServlet -->
    <servlet-mapping>
        <servlet-name>WorkoutHistoryServlet</servlet-name>
        <url-pattern>/workout-history</url-pattern>
    </servlet-mapping>

    <!-- Map /progress-dashboard to ProgressDashboardServlet -->
    <servlet-mapping>
        <servlet-name>ProgressDashboardServlet</servlet-name>
        <url-pattern>/progress-dashboard</url-pattern>
    </servlet-mapping>

    <!-- Map /food-history to FoodEntryHistoryServlet -->
    <servlet-mapping>
        <servlet-name>FoodEntryHistoryServlet</servlet-name>
        <url-pattern>/food-history</url-pattern>
    </servlet-mapping>

    <!-- Map password reset servlets -->
    <servlet-mapping>
        <servlet-name>ForgotPasswordServlet</servlet-name>
        <url-pattern>/ForgotPasswordServlet</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>VerifySecurityAnswerServlet</servlet-name>
        <url-pattern>/VerifySecurityAnswerServlet</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>ResetPasswordServlet</servlet-name>
        <url-pattern>/ResetPasswordServlet</url-pattern>
    </servlet-mapping>

    <!-- Workout Logging Servlet Mappings (via @WebServlet annotations) -->Database Test servlets use @WebServlet annotations -->



    <!-- ======== Welcome Page ======== -->
    <welcome-file-list>
        <welcome-file>register.jsp</welcome-file>
    </welcome-file-list>

</web-app>
